@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <form class="form-group" method="post" action="http://localhost:57959/api/Usuario">
        <div class="row">
            <div class="col-sm-4">
                <input type="text" placeholder="Nome" id="nome" name="nome" class="form-control" />
                <input type="text" placeholder="Sobrenome" name="sobrenome" id="Sobrenome" class="form-control" />
                <select id="sexo" name="sexo" class=" form-control">
                    <option disabled selected>Sexo</option>
                    <option value="M">M</option>
                    <option value="F">F</option>
                </select>
                <input type="text" placeholder="Telefone" id="Telefone" name="Telefone" class="form-control" />
            </div>

            <div class="col-sm-4">
                <input type="text" placeholder="CPF" id="CPF" name="CPF" class="form-control" />
                <input type="text" placeholder="CEP" id="CEP" name="CEP" class="form-control" />
                <input type="text" placeholder="Endereço" id="Endereco" name="Endereco" class="form-control" />
                <input type="text" placeholder="Cidade" id="Cidade" name="Cidade" class="form-control" />

            </div>
            <div class="col-sm-4">
                <input type="text" placeholder="Cargo" id="Cargo" name="Cargo" class="form-control" />
                <input type="text" placeholder="Nome da mãe" id="nomeMae" name="nomeMae" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Enviar" style="float:left" id="btnEnviar" />
        </div>
    </form>
    
   
</div>
